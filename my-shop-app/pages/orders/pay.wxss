.row-box {
    width: 720rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 0 24rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}

.qr-pay {
    width: 100%;
    height: 500px;
}

.bottom {
    display: flex;
    flex-direction: row;
    position: fixed;
    width: 100%;
    height: 108rpx;
}

.cancel-pay {
    width: 50%;
    text-align: center;
    line-height: 100rpx;
    background-color: #999;
    color: #fff;
    font-size: 34rpx;
}

.finish-pay {
    text-align: center;
    width: 50%;
    line-height: 100rpx;
    background-color: #e64340;
    color: #fff;
    font-size: 34rpx;
}
