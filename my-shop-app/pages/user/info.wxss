.container {
    min-height: 100%;
    overflow: hidden;
    overflow-y: hidden;
}

.userinfo {
    display: flex;
    flex-direction: column;
    padding: 100rpx 0;
    align-items: center;
    background: #e85654;
    width: 750rpx;
}

.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    border-radius: 50%;
    padding: 0;
}

.userinfo-avatar-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.nickname {
    display: flex;
    flex-direction: row;
    padding-left: 70rpx;
}

.nickname-input {
    padding-left: 80rpx;
    width: 180rpx;
    padding-top: 20rpx;
}

.userinfo-nickname {
    margin-top: 20rpx;
    color: #FFF;
}

.finish-btn {
    border: 1px solid #FFF;
    color: #e85654;
    background-color: #FFF;
    height: 50rpx;
    width: 130rpx;
    font-size: 32rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
}

.version {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    text-align: center;
    padding: 40rpx;
}

.my-item {
    width: 100%;
    background: url(http://cdn.static.54php.cn/mina_order/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto, 750rpx auto;
    margin: 20rpx 0;
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 100rpx;
}

.right-edit {
    width: 80rpx;
    height: 100%;
    padding: 50rpx 0rpx 20rpx 0rpx;
    box-sizing: border-box;
    background: url(http://cdn.static.54php.cn/mina_order/addr-edit.png) no-repeat 20rpx 25rpx;
    background-size: 35rpx auto;
}