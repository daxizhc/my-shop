.container {
    background-color: #F2f2f2;
}

.goods-images {
    height: 562.5rpx;
}

.goods-images image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.goods-intro {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 35rpx 0;
    position: relative;
    margin-bottom: 24rpx;
}

.goods-name {
    font-size: 32rpx;
    padding: 0 35rpx;
}

.goods-price-stock {
    display: flex;
    flex-direction: row;
    margin-top: 28rpx;
}

.goods-price {
    color: #e64340;
    font-size: 28rpx;
    font-weight: bold;
    padding: 0 35rpx;
}

.goods-stock {
    color: #999;
    font-size: 28rpx;
    padding: 0 55rpx;
    font-weight: bold;
}

.goods-share {
    position: absolute;
    right: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding-top: 20rpx;
}

button::after {
    border: none;
}

.goods-share image {
    margin-left: -5rpx;
    width: 70rpx;
    height: 70rpx;
}

.goods-share text {
    font-size: 25rpx;
    text-align: left;
}

.goods-desc {
    background-color: #fff;
    padding-top: 12rpx;
}

.goods-desc text {
    font-size: 28rpx;
    color: #000000;
    padding: 0 30rpx;
}

.goods-desc-images {
    margin-top: 24rpx;
    background-color: #fff;
}

.goods-desc-images image {
    width: 100%;
}

.cart-and-buy {
    width: 100%;
    height: 100rpx;
    background-color: #fff;

    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    box-shadow: 0 0 8rpx 0;
}

.cart {
    position: relative;
    width: 18%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    font-size: 20rpx;
    color: #acacb7;
    box-sizing: border-box;
    background-size: 44rpx auto;
    background-color: #fff;
}

.cart-pic {
    width: 44rpx;
    height: 44rpx;
    margin-top: 22rpx;
}

.goods-num {
    position: absolute;
    color: #e64340;
    left: 85rpx;
    top: 10rpx;
}

.add-cart {
    width: 41%;
    text-align: center;
    line-height: 100rpx;
    background-color: #ff6850;
    color: #fff;
    font-size: 34rpx;
}

.buy {
    text-align: center;
    width: 100%;
    line-height: 100rpx;
    background-color: #e64340;
    color: #fff;
    font-size: 34rpx;
}

.sold-out {
    text-align: center;
    width: 82%;
    line-height: 100rpx;
    background-color: #999;
    color: #fff;
    font-size: 34rpx;
}


.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 5;
}

.popup-content {
    width: 100%;
    height: 480rpx;
    background-color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 6;
}

.popup-goods {
    display: flex;
    flex-direction: row;
    padding: 40rpx 0;
    border-bottom: 1px solid #f2f2f2;
    height: 25%;
}

.popup-goods image {
    width: 130rpx;
    height: 130rpx;
    margin-left: 20rpx;
}

.popup-goods-info {
    padding-left: 30rpx;
    padding-top: 20rpx;
}

.popup-goods-name {
    width: 484rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 26rpx;
    color: #000000;
}

.popup-goods-price {
    font-size: 26rpx;
    color: #e64340;
    margin-top: 20rpx;
}

.popup-close {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 36rpx;
    height: 36rpx;
    /*flex: 1;*/
    background: url("http://cdn.static.54php.cn/mina_order/popup-close.png") no-repeat center center;
    background-size: 36rpx auto;
    /*align-self: flex-start;*/
    /*margin-top: -10rpx;*/
}

.buy-number {
    display: flex;
    flex-direction: row;
    padding: 50rpx 30rpx;
    justify-content: space-between;
    align-items: center;
}

.buy-number text {
    text-align: center;
    font-size: 26rpx;
    color: #000000;
}

.buy-confirm {
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    background-color: #e64340;
    color: #fff;
    font-size: 34rpx;
}

.number-box {
    display: flex;
    flex-direction: row;
}

.number-minus, .number, .number-plus {
    width: 80rpx;
    height: 64rpx;
    line-height: 62rpx;
    text-align: center;
    border: 1px solid #eee;
    font-size: 28rpx;
}

.gray {
    background-color: #f5f5f9;
}